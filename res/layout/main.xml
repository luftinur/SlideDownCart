<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                android:background="@color/bg_app"
        >

        <LinearLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:orientation="horizontal"
                android:background="@drawable/filter_bg"
                android:layout_height="wrap_content"
                android:id="@+id/cart_container"
                android:padding="5dip"
                >

        <ImageView
                android:id="@+id/imgview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shoppingcart"
                android:layout_gravity="left"
                />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Anything you want to put"

                android:layout_marginLeft="20dip"/>



        </LinearLayout>

        <LinearLayout android:id="@+id/other_container"
                      android:layout_below="@+id/cart_container"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:padding="5dp"
                      android:background="#336666"
                        android:orientation="horizontal">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Some Text Dummy"/>


        </LinearLayout>
    </RelativeLayout>

